extends base

block content
	div.styleCreation
		h1 Créer un nouvel utilisateur
		form.formCreateUser
			label(for='lname') Nom :
			input(type='text', class='lname', name='lname',required)

			label(for='fname') Prénom :
			input(type='text', class='fname', name='fname',required)

			label(for='choixRole') Choix du rôle :
			label.choiceRole(for='role')
				div.choiceAdmin
					label(for='Admin') Admin
					input(type='radio', class='Admin', name='role', value='Admin',required)
				div.choiceUser
					label(for='User') Utilisateur
					input(type='radio', class='User', name='role', value='User',required)

			label(for='email') Adresse e-mail :
			input(type='email', class='email', name='email',required)

			label(for='password') Mot de passe :
			input(type='password', class='password', name='password',required)

			label(for='passwordConfirm') Confirmez le mot de passe :
			input(type='password', class='passwordConfirm', name='passwordConfirm',required)

			input(type='submit', value='Créer un compte')